<templates xml:space="preserve">

    <t t-name="awesome_clicker.ClickerClientAction">
        <div class="ms-1 mt-1">
            <span>Clicks: <ClickerValue/> </span>
            <button class="btn btn-primary ms-1" t-on-click="() => this.clickService.increment(9)">
                Increment
            </button>
        </div>
        <div t-if="this.clickService.state.unlockLevel >= 1" class="ms-1 mt-1">
            <h2> Bots </h2>
            <div class="d-flex flex-row">
                <t t-foreach="this.clickService.state.bots" t-as="bot" t-key="bot">
                    <div t-if="bot_value.unlockLevel lte this.clickService.state.unlockLevel" class="card me-3">
                        <div class="card-header">
                            <t t-esc="bot_value.purchased"/>x <t t-esc="bot"/> (<t t-esc="bot_value.increment * this.clickService.state.multiplier"/> clicks/10seconds)
                            <i class="fa fa-android"></i>
                        </div>
                        <div class="card-body">
                            <button t-on-click="() => this.clickService.buyBot(bot)" class="btn btn-primary" t-att-disabled="this.clickService.state.clicks lt bot_value.price">
                                Buy <t t-esc="bot"/> (<t t-esc="bot_value.price"/> clicks)
                            </button>
                        </div>
                    </div>
                </t>
            </div>
        </div>
        <div t-if="this.clickService.state.unlockLevel >= 3" class="ms-1 mt-1">
            <h2> Power multiplier </h2>
            <div class="d-flex flex-row">
                <div class="card me-3">
                    <div class="card-header">
                        <t t-esc="this.clickService.state.multiplier"/>x
                        <i class="fa fa-superpowers"></i>
                    </div>
                    <div class="card-body">
                        <button t-on-click="() => this.clickService.buyMultiplier()" class="btn btn-primary" t-att-disabled="this.clickService.state.clicks lt 50000">
                            Buy Power Multiplier (50000 clicks)
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div t-if="this.clickService.state.unlockLevel >= 4" class="ms-1 mt-1">
            <h2> Trees </h2>
            <div class="d-flex flex-row">
                <t t-foreach="this.clickService.state.trees" t-as="tree" t-key="tree">
                    <div t-if="tree_value.unlockLevel lte this.clickService.state.unlockLevel" class="card me-3">
                        <div class="card-header">
                            <t t-esc="tree_value.purchased"/>x <t t-esc="tree"/> (1x <t t-esc="tree_value.produce"/> /30seconds)
                            <i class="fa fa-tree"></i>
                        </div>
                        <div class="card-body">
                            <button t-on-click="() => this.clickService.buyTree(tree)" class="btn btn-primary" t-att-disabled="this.clickService.state.clicks lt tree_value.price">
                                Buy <t t-esc="tree"/> (<t t-esc="tree_value.price"/> clicks)
                            </button>
                        </div>
                    </div>
                </t>
            </div>

            <h2> Fruits </h2>
            <div class="d-flex flex-row">
                <t t-foreach="this.clickService.state.fruits" t-as="fruit" t-key="fruit">
                    <div class="card me-3">
                        <div class="card-header">
                            <t t-esc="fruit_value"/>x <t t-esc="fruit"/>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>

</templates>
